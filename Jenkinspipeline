pipeline {
  agent any

   stages {

   stage ('checkout') {
     steps {
      git credentialsId: '2fc5dfbf-5f53-4690-806e-1284a462ec7c', url: 'https://github.com/gaddypavan/HELLOWORLD.git'
     }
   }
   stage ('maven build') {
     steps {
       echo 'maven build'
       sh 'mvn package'
     }
   }
 stage ('docker image creation') {
    steps {
      sh 'docker build -t gpavankumarreddy/helloworld .'
      }
  }

  stage('docker push') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'DockerHub', passwordVariable: 'dockerHubPassword', usernameVariable: 'dockerHubUser')]) {
        sh "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
        }
      sh 'docker push gpavankumarreddy/helloworld:latest'
    }
  }
stage("deploy to kubernetes") {
    steps {
        sshagent(['k8s']) {
            script {
                try {
                    sh 'scp -o StrictHostKeyChecking=no depsvc.yaml ubuntu@ip-172-31-3-223:/home/ubuntu'
                    sh 'ssh ubuntu@ip-172-31-3-223 sudo kubectl apply -f /home/ubuntu/depsvc.yaml'
                } catch (Exception e) {
                    sh 'ssh ubuntu@ip-172-31-3-223 sudo kubectl create -f /home/ubuntu/depsvc.yaml'
                }
            }
        }
      }
     }
    }
  }
