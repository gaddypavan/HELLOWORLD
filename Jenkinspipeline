pipeline {
  agent any

   stages {

   stage ('checkout') {
     steps {
      git credentialsId: '2fc5dfbf-5f53-4690-806e-1284a462ec7c', url: 'https://github.com/gaddypavan/HELLOWORLD.git'
     }
   }
   stage ('maven build') {
     steps {
       echo 'maven build'
       sh 'mvn package'
     }
   }
}
}

 stage ('docker image creation') {
    steps {
      sh 'docker build -t gpavankumarreddy/helloworld .'
      }
  }

  stage('docker push') {
      steps {
        withCredentials([usernamePassword(credentialsId: '2fc5dfbf-5f53-4690-806e-1284a462ec7c', passwordVariable: 'Devops@1998', usernameVariable: 'gpavankumarreddy')]) {
        sh "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
        }
      sh 'docker push gpavankumarreddy/helloworld:latest'
    }
  }
}
}
